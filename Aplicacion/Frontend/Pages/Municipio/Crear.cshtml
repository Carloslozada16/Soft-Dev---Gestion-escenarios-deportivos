@page
@model Frontend.Pages.CrearModel
@{
    ViewData["Title"]="Crear";
}
<h1>Crear Municipio</h1>

<div class="form-horizontal">
    <hr />
    <div class="row">
        <div class="col-md-4">
            <!--<Creacion formulario> -->
            <form method="post">
                <div> </div>
                <div class="form-group">
                    <!--<Nombre atributo> -->
                    <label asp-for="Municipio.Nombre"class="control-label"></label>
                    <!--<Campo de lectura de datos ingresados> -->
                    <input asp-for="Municipio.Nombre"class="form-control" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Crear" class ="btn btn-primary"/>
                </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-page="MIndex">Ir al Inicio</a>
    </div>
</div>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}