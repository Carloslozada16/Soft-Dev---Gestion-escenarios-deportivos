@page
@model Frontend.Pages.CIndexModel
@{
    ViewData["Title"] = "CIndex";
}
<h1>Torneos</h1>
<p>
    <a asp-page = "Create">Crear Torneo</a>
</p>

<table class="table">
    <thead>
        <tr>
            <td>Id</td>
            <td>Nombre</td>
        </tr>
    </thead>
    <tbody>
            @foreach (var item in Model.Torneos)
            {
                <tr>
                    <td>@item.Id </td>
                    <td>@item.Nombre</td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.Id">Editar</a>
                        <a asp-page="./Delete" asp-route-id="@item.Id">Eliminar</a>
                        <a asp-page="./Details" asp-route-id="@item.Id">Detalles</a>
                    </td>

                </tr>
            }
    </tbody>

</table>